  "version": "0.2.0",
  "configurations": [
    {
      "name": "Main",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/bin/main.js",
      "args": [
        "--downloader=cached",
        "--uploader=console-verbose",
      ],
      "type": "pwa-node"
    },
    {
      "name": "Downloader",
      "program": "${workspaceFolder}/bin/download.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    }
  ]
}